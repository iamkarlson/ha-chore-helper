{
  "name": "HA + uv devcontainer",
  "image": "mcr.microsoft.com/devcontainers/python:3.13",
  "appPort": [
    "7123:8123"
  ],
  "postCreateCommand": "bash .devcontainer/post_create_command.sh",
  "runArgs": [
    "-e",
    "GIT_EDITOR=code --wait",
    "--privileged"
  ],
  "containerEnv": {
    "WORKSPACE_DIRECTORY": "${containerWorkspaceFolder}",
    // keep uv cache writable even when container runs as non-root
    "UV_CACHE_DIR": "/config/.uv_cache" // avoids Issue #128214 :contentReference[oaicite:2]{index=2}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "github.vscode-pull-request-github",
        "ryanluker.vscode-coverage-gutters",
        "ms-python.vscode-pylance",
        "ms-python.pylint",
        "streetsidesoftware.code-spell-checker",
        "ms-azuretools.vscode-docker",
        "EditorConfig.EditorConfig",
        "github.vscode-github-actions",
        "eamodio.gitlens",
        "oderwat.indent-rainbow",
        "ms-python.isort",
        "yzhang.markdown-all-in-one",
        "christian-kohler.path-intellisense",
        "ms-python.black-formatter",
        "redhat.vscode-yaml",
        "DmitryDorofeev.empty-indent",
        "timonwong.shellcheck",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true
      }
    }
  },
  "mounts": [
    "type=bind,source=${localWorkspaceFolder}/custom_components,target=/config/custom_components",
    "type=bind,source=${localWorkspaceFolder}/configuration.yaml,target=/config/configuration.yaml",
    "type=bind,source=${localWorkspaceFolder}/ha_config,target=/config"
  ],
  "features": {
    // common CLI niceties
    "ghcr.io/devcontainers/features/common-utils:2": {},
    // add ffmpeg (and anything else) via apt
    "ghcr.io/devcontainers-extra/features/apt-get-packages:1": {
      "packages": [
        "ffmpeg"
      ]
    }
  }
}