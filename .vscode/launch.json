{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "HA debug (venv)",
      "type": "python",
      "request": "launch",
      "module": "homeassistant",
      "args": [
        "--debug",
        "--skip-pip",
        "-c",
        "/config"
      ],
      "justMyCode": false,
      // force the venv even if someone changes the default interpreter later
      "python": "${workspaceFolder}/.venv/bin/python"
    }
  ]
}