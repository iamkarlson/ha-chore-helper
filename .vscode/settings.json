{
    // tell the Python extension which interpreter to use
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "editor.formatOnSave": true,
    "files.associations": {
        "*.yaml": "home-assistant"
    },
    "cSpell.words": [
        "bmcclure",
        "dateutil",
        "HACS",
        "hass",
        "hassfest",
        "homeassistant",
        "relativedelta"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
}